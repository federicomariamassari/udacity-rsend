<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo"/>

  <link name="robot_footprint"></link>

    <joint name="robot_footprint_joint" type="fixed">
     <origin xyz="0 0 0" rpy="0 0 0"/>
     <parent link="robot_footprint"/>
     <child link="chassis"/>
    </joint>
    
    <link name="chassis">
      <pose>0 0 0.1 0 0 0</pose>
      
      <inertial>
        <mass value="15.0"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0" 
          izz="0.1"
        />
      </inertial>

      <collision name="collision">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.5 0.3 0.08"/>
        </geometry>
      </collision>

      <visual name="chassis_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.5 0.3 0.08"/>
        </geometry>
      </visual>

    </link>
  
    <link name="left_wheel_rear">
    
      <inertial>
        <mass value="5"/>
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0" 
          izz="0.1"
        />
      </inertial>
    
      <collision name="left_wheel_rear_collision">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </collision>

      <visual name="left_wheel_rear_visual">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </visual>

    </link>
    
    <joint type="continuous" name="left_wheel_rear_hinge">
      <origin xyz="-0.15 0.17 0" rpy="0 0 0"/>
      <child link="left_wheel_rear"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <link name="left_wheel_front">
    
      <inertial>
        <mass value="5"/>
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0" 
          izz="0.1"
        />
      </inertial>
    
      <collision name="left_wheel_front_collision">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </collision>

      <visual name="left_wheel_front_visual">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </visual>

    </link>
    
    <joint type="continuous" name="left_wheel_front_hinge">
      <origin xyz="0.15 0.17 0" rpy="0 0 0"/>
      <child link="left_wheel_front"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

    
    <link name="right_wheel_rear">
    
      <inertial>
        <mass value="5"/>
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0" 
          izz="0.1"
        />
      </inertial>
    
      <collision name="right_wheel_rear_collision">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </collision>

      <visual name="right_wheel_rear_visual">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </visual>

    </link>
    
    <joint type="continuous" name="right_wheel_rear_hinge">
      <origin xyz="-0.15 -0.17 0" rpy="0 0 0"/>
      <child link="right_wheel_rear"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <link name="right_wheel_front">
    
      <inertial>
        <mass value="5"/>
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0" 
          izz="0.1"
        />
      </inertial>
    
      <collision name="right_wheel_front_collision">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </collision>

      <visual name="right_wheel_front_visual">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.09" length="0.02"/>
        </geometry>
      </visual>

    </link>
    
    <joint type="continuous" name="right_wheel_front_hinge">
      <origin xyz="0.15 -0.17 0" rpy="0 0 0"/>
      <child link="right_wheel_front"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

    
    <link name="camera">
    
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0" 
          izz="1e-6"
        />
        <box_inertia m="0.1" x="0.01" y="0.3" z="0.005"/>
      </inertial>
      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.3 0.005"/>
        </geometry>
      </collision>
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.3 0.005"/>
        </geometry>
      </visual>      

    </link>

    <joint type="fixed" name="camera_joint">
      <origin xyz="0.25 0 0" rpy="0 0 0"/>
      <child link="camera"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

  <link name="hokuyo">
    
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="1e-6" ixy="0" ixz="0"
        iyy="1e-6" iyz="0"
        izz="1e-6"
      />
    </inertial>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
    
  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.15 0 0.07" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>
  
  <!-- wiki.ros.org/simulator_gazebo/Tutorials/ListOfMaterials -->
  <gazebo reference="left_wheel_rear">
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <gazebo reference="left_wheel_front">
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <gazebo reference="chassis">
    <material>Gazebo/Red</material>
  </gazebo>
  
  <gazebo reference="right_wheel_rear">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="right_wheel_front">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="camera">
    <material>Gazebo/White</material>
  </gazebo>

</robot>
