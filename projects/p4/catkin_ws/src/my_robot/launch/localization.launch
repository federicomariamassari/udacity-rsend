<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- Arguments for launch file with defaults provided -->
  <arg name="database_path" default="$(find my_robot)/maps/rtabmap.db"/>
  <arg name="rgb_topic" default="/camera/rgb/image_raw"/>
  <arg name="depth_topic" default="/camera/depth/image_raw"/>
  <arg name="camera_info_topic" default="/camera/rgb/camera_info"/>

  <!-- Localization Node -->
  <group ns="rtabmap">

    <!-- Open an existing database (if available) to perform localization -->
    <node name="rtabmap" pkg="rtabmap_slam" type="rtabmap" output="screen">

      <!-- Basic RTAB-Map Parameters -->
      <param name="database_path" type="string" value="$(arg database_path)"/>
      <param name="frame_id" type="string" value="robot_footprint"/>
      <param name="odom_frame_id" type="string" value="odom"/>
      <param name="subscribe_depth" type="bool" value="true"/>
      <param name="subscribe_scan" type="bool" value="true"/>

      <!-- RTAB-Map Inputs -->
      <remap from="scan" to="/scan"/>
      <remap from="rgb/image" to="$(arg rgb_topic)"/>
      <remap from="depth/image" to="$(arg depth_topic)"/>
      <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>

      <!-- RTAB-Map Output -->
      <remap from="grid_map" to="/map"/>

      <!-- Parameters with asterisk (*) are custom additions to the default ones from Udacity.
        
        Resources: 
        
        [1] https://github.com/introlab/rtabmap/blob/master/corelib/include/rtabmap/core/Parameters.h
        [2] https://github.com/introlab/rtabmap/issues/350 (To prevent 2D map distortion at loop closure)

      -->

      <!-- RTAB-Map Parameters -->

      <!-- Rate (Hz) at which new nodes are added to map -->
      <param name="Rtabmap/DetectionRate" type="string" value="1"/>

      <!-- Memory -->

      <!-- Set to false to enable localization mode (true: SLAM) -->
      <param name="Mem/IncrementalMemory" type="string" value="false"/>

      <!-- KeypointMemory (keypoint-based) -->

      <!-- Maximum visual words per milage (bag-of-words) -->
      <param name="Kp/MaxFeatures" type="string" value="400"/>

      <!-- Loop Closure Detection -->
      <!-- 0=SURF 1=SIFT 2=ORB 3=FAST/FREAK 4=FAST/BRIEF 5=GFTT/FREAK 6=GFTT/BRIEF 7=BRISK 8=GFTT/ORB 9=KAZE-->
      <param name="Kp/DetectorStrategy" type="string" value="0"/>

      <!-- Keypoint Descriptors/Detectors -->

      <!-- Used to extract more or less SURF features -->
      <param name="SURF/HessianThreshold" type="string" value="100"/>

      <!-- Odometry -->

      <!-- To account for non-holonomic, skid-steer robot setup: y = x*tan(yaw) --> 
      <param name="Odom/Holonomic" type="bool" value="false"/>

      <!-- Common Registration Parameters -->

      <!-- Loop Closure Constraint: 0=Visual 1=ICP (1 requires scan) -->
      <param name="Reg/Strategy" type="string" value="0"/>

      <!-- 2D Slam -->
      <param name="Reg/Force3DoF" type="string" value="true"/>

      <!-- Visual Registration Parameters -->

      <!-- Minimum visual inliers to accept loop closure -->
      <param name="Vis/MinInliers" type="string" value="35"/>

      <!-- To enable Mem/UseOdomFeatures. 0=SURF -->
      <param name="Vis/FeatureType" type="int" value="0"/>

      <!-- Occupancy Grid -->

      <!-- Construct occupancy grid map from laser scans (suppress warning) -->
      <param name="Grid/3D" type="string" value="true"/>
      <param name="Grid/Sensor" type="string" value="true"/>

    </node>

    <!-- Not recommended during simulation phase due to computing overhead -->
    <!-- Visualization with rtabmap_viz -->
    <node pkg="rtabmap_viz" type="rtabmap_viz" name="rtabmap_viz" args="-d $(find rtabmap_viz)/launch/config/rgbd_gui.ini" output="screen">
    <param name="subscribe_depth" type="bool" value="true"/>
    <param name="subscribe_scan" type="bool" value="true"/>
    <param name="frame_id" type="string" value="robot_footprint"/>

    <remap from="rgb/image" to="$(arg rgb_topic)"/>
    <remap from="depth/image" to="$(arg depth_topic)"/>
    <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>
    <remap from="scan" to="/scan"/>

    <remap from="odom" to="/odom"/>  <!-- To suppress warning -->

    </node>

  </group>

</launch>
